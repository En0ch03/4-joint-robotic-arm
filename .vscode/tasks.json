{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "build",
            "command": "msbuild",
            "type": "shell",
            "args": [
                "RobotArm3D\\RobotArm3D.csproj",
                "/p:Configuration=Debug",
                "/p:Platform=AnyCPU",
                "/t:Build"
            ],
            "problemMatcher": "$msCompile",
            "group": {
                "kind": "build",
                "isDefault": true
            }
        },
        {
            "label": "run",
            "command": "${workspaceFolder}\\RobotArm3D\\bin\\Debug\\RobotArm3D.exe",
            "type": "shell",
            "dependsOn": "build",
            "problemMatcher": [],
            "group": {
                "kind": "test",
                "isDefault": true
            }
        }
    ]
}
